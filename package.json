{
  "name": "panel-desktop",
  "version": "1.0.0",
  "private": false,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "classnames": "^2.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-osx-sign": "^0.5.0",
    "electron-packager": "^15.3.0",
    "electron-updater": "^4.3.9",
    "global": "^4.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "react-build": "react-scripts build",
    "dev": "concurrently -k \"BROWSER=none yarn react-start\" \"yarn:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "build": "yarn react-build && electron-builder build --mac --publish never",
    "deploy": "yarn react-build && electron-builder build --mac --publish always"
  },
  "build": {
    "appId": "by.gmar.homeidpanel",
    "productName": "HomeID Panel",
    "afterSign": "./notarize.js",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "default",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.0",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GorbunovV/panel-desktop-releases.git"
  }
}
